<Window x:Class="Projekt.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="ChangePassword" Height="300" Width="320">
    <Grid>
        <StackPanel Margin="15,5,15,5">
            <Label Content="Stare hasło: " FontSize="10"/>
            <PasswordBox Height="40" VerticalContentAlignment="Center" FontSize="15" x:Name="oldPassword"/>
            <Label Content="Nowe hasło:" FontSize="10"/>
            <PasswordBox Height="40" VerticalContentAlignment="Center" FontSize="15" x:Name="newPassword" PasswordChanged="newPassword_PasswordChanged"/>
            <Label x:Name="info"/>
            <Label Content="Powtórz nowe hasło:" FontSize="10"/>
            <PasswordBox Height="40" VerticalContentAlignment="Center" FontSize="15" x:Name="repeatNewPass"/>
            <Button Background="#FFB3E5F1" Content="Zmień" Margin="100, 5, 100, 0" x:Name="change" Click="change_Click"/>
        </StackPanel>
    </Grid>
</Window>
