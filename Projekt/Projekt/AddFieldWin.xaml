<Window x:Class="Projekt.AddFieldWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="AddFieldWin" Height="200" Width="300">
    <Grid>
        <StackPanel Grid.RowSpan="2">
            <Label Content="Podaj nazwę:"/>
            <TextBox Height="35" x:Name="nameBox" FontSize="15" VerticalContentAlignment="Center"/>
            <Label Content="Podaj kategorie:"/>
            <TextBox Height="35" x:Name="categoryBox" FontSize="15" VerticalContentAlignment="Center"/>
            <Label/>
            <Button Background="#FFB3E5F1" Content="Dodaj" Margin="100,0,100,0" x:Name="Add" Click="Add_Click"/>
            <Label x:Name="message" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
